{
    "manifest_version": 1,
    "type": "WebApp",
    "meta": {
        "name": "PUBG Recoil",
        "version": "1.0.0",
        "minimum-overwolf-version": "0.120.0",
        "author": "Nikola Markovic",
        "icon": "IconMouseOver.png",
        "icon_gray": "IconMouseNormal.png",
        "launcher_icon": "desktop-icon.ico",
        "description": "Ultimate PUBG weapon & attachment recoil guide with over 400+ different recoil patterns."
    },
    "permissions": [
        "Hotkeys"
    ],
    "data": {
        "game_targeting": {
            "type": "dedicated",
            "game_ids": [10906]
        },
        "launch_events": [{
            "event": "GameLaunch",
            "event_data": {
                "game_ids": [10906]
            },
            "start_minimized": false
        }],
        "hotkeys": {
            "showhide_recoil": {
                "title": "Show In-Game Window",
                "action-type": "toggle",
                "default": "Ctrl+J"
            },
            "pubg_devchallenge_screenshot": {
                "title": "Take Screenshot",
                "action-type": "custom",
                "default": "Ctrl+R"
            }
        },
        "game_events": [10906],
        "start_window": "background",
        "windows": {
            "background": {
                "file": "windows/background/background.html",
                "native_window": true,
                "desktop_only": true,
                "background_optimization": false,
                "is_background_page": true,
                "transparent": true,
                "resizable": false,
                "show_in_taskbar": false,
                "size": {
                    "width": 100,
                    "height": 100
                },
                "grab_keyboard_focus": false
            },
            "settings": {
                "file": "windows/settings/settings.html",
                "transparent": true,
                "resizable": true,
                "in_game_only": false,
                "block_top_window_navigation": true,
                "size": {
                    "width": 500,
                    "height": 300
                },
                "min_size": {
                    "width": 500,
                    "height": 300
                }
            },
            "in_game": {
                "file": "windows/in-game/in-game.html",
                "transparent": true,
                "resizable": true,
                "is_background_page": false,
                "in_game_only": false,
                "block_top_window_navigation": true,
                "size": {
                    "width": 350,
                    "height": 380
                },
                "min_size": {
                    "width": 350,
                    "height": 380
                },
                "max_size": {
                    "width": 350,
                    "height": 380
                }
            }
        },
        "externally_connectable": {
            "matches": [
                "http://*.overwolf.com",
                "https://*.overwolf.com",
                "https://*.google-analytics.com",
                "http://*.google-analytics.com",
                "https://www.googleapis.com"
            ]
        },
        "developer": {
            "enable_auto_refresh": true,
            "reload_delay": 500
        }
    }
}